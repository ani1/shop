<!DOCTYPE html>
<html>
  <head>
    <title>Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container-fluid">

    <%= render 'layouts/navbar' %>

    <h3><%= content_for?(:header) ? yield(:header) : "Shop" %></h3>

    <div>
      <% if flash[:notice] %>
          <div class="alert alert-success"><%= notice.html_safe %></div>
      <% end %>
      <% if flash[:alert] %>
          <div class="alert alert-danger"><%= alert.html_safe %></div>
      <% end %>
      <% if flash[:message] %>
          <div class="alert alert-info"><%= flash[:message].html_safe %></div>
      <% end %>
    </div>

    <%= yield %>
  </div>
  </body>
</html>
